# ABOUTME: Example environment configuration file for the Claude-Telegram notificator.
# ABOUTME: Copy this to .env and fill in your actual values.

# Telegram Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get your chat ID by running /start with your bot
TELEGRAM_CHAT_ID=your_chat_id_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Redis Configuration (optional for PoC)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_ENABLED=false

# Feature Flags
ENABLE_NOTIFICATIONS=true
RESPONSE_TIMEOUT=300

# Project Configuration
# Path to projects config (optional, defaults to ~/.claude-telegram/projects.json)
# PROJECTS_CONFIG_PATH=/path/to/projects.json
